generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  //  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  role      String    @default("user")
  payments  Payment[]
  createdAt DateTime  @default(now())
}

model Payment {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  type     PaymentType
  amount   Int
  currency String      @default("NGN")

  status    PaymentStatus
  reference String        @unique

  planId    String?
  mandateId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mandate {
  id         String        @id @default(cuid())
  userId     String
  mandateRef String        @unique
  status     MandateStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PaymentType {
  SINGLE
  SIMPLE
  SUBSCRIPTION
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum MandateStatus {
  PENDING
  ACTIVE
  FAILED
}

model WebhookLog {
  id        String   @id @default(uuid())
  payload   Json
  createdAt DateTime @default(now())
}
